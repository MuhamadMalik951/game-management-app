<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Genres</title>
    <link rel="stylesheet" href="/styles.css" />
  </head>
  <body>
    <nav class="navbar">
      <div class="container">
        <a class="navbar-brand" href="/">Game Management</a>
        <ul class="navbar-links">
          <li><a href="/">Dashboard</a></li>
          <li><a href="/developers">Developers</a></li>
          <li><a href="/games">Games</a></li>
          <li><a href="/genres">Genres</a></li>
        </ul>
      </div>
    </nav>

    <div class="container content">
      <div class="header">
        <h1 class="title">Genres</h1>
        <a href="/genres/create">
          <button class="add-button">Add New Genre</button>
        </a>
      </div>
      
      <input
        type="text"
        class="search-box"
        id="search-box"
        placeholder="Search genres..."
        oninput="filterGenres()"
      />

      <table class="developers-table">
        <thead>
          <tr>
            <th>NAME</th>
            <th>DESCRIPTION</th>
            <th>GAMES</th>
            <th>ACTIONS</th>
          </tr>
        </thead>
        <tbody id="genre-list">
          <% genres.forEach(genre => { %>
          <tr>
            <td class="genre-name"><%= genre.name %></td>
            <td class="genre-description"><%= genre.description %></td>
            <td class="genre-games"><%= genre.games ? genre.games : 'None' %></td>
            <td class="action-links">
              <a href="/genres/<%= genre.id %>" class="view-link">View</a>
              <a href="#" class="edit-link">Edit</a>
              <form action="genres/<%=genre.id%>/delete" method="POST">
                <button type="submit" class="delete-link">Delete</button>
              </form>
            </td>
          </tr>
          <% }); %>
        </tbody>
      </table>
    </div>

    <footer class="footer">
      <p>&copy; 2025 Game Management Dashboard. All rights reserved.</p>
    </footer>

    <script>
      function filterGenres() {
        const searchInput = document.getElementById("search-box").value.toLowerCase(); 
        const rows = document.querySelectorAll("#genre-list tr"); 

        rows.forEach((row) => {
          const genreName = row.querySelector(".genre-name").textContent.toLowerCase();
          const genreDescription = row.querySelector(".genre-description").textContent.toLowerCase();
          const genreGames = row.querySelector(".genre-games").textContent.toLowerCase();
          if (
            genreName.includes(searchInput) ||
            genreDescription.includes(searchInput) ||
            genreGames.includes(searchInput)
          ) {
            row.style.display = ""; 
          } else {
            row.style.display = "none"; 
          }
        });
      }
    </script>
  </body>
</html>
