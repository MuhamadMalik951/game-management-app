<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Developers</title>
    <link rel="stylesheet" href="/styles.css" />
  </head>
  <body>
    <nav class="navbar">
      <div class="container">
        <a class="navbar-brand" href="/">Game Management</a>
        <ul class="navbar-links">
          <li><a href="/">Dashboard</a></li>
          <li><a href="/developers">Developers</a></li>
          <li><a href="/games">Games</a></li>
          <li><a href="/genres">Genres</a></li>
        </ul>
      </div>
    </nav>
    <div class="container content">
      <div class="header">
        <h1 class="title">Developers</h1>
        <a href="/developers/create">
          <button class="add-button">Add New Developer</button>
        </a>
      </div>


      <input
        type="text"
        class="search-box"
        id="search-box"
        placeholder="Search developers..."
        oninput="filterDevelopers()"
      />

      <table class="developers-table">
        <thead>
          <tr>
            <th>NAME</th>
            <th>BIO</th>
            <th>GAMES</th>
            <th class="actions">ACTIONS</th>
          </tr>
        </thead>
        <tbody id="developer-list">
          <% developers.forEach(developer => { %>
          <tr>
            <td class="developer-name"><%= developer.name %></td>
            <td class="developer-bio"><%= developer.bio %></td>
            <td class="developer-games"><%= developer.games ? developer.games : 'None' %></td>
            <td class="action-links">
              <a href="/developers/<%= developer.id %>" class="view-link">View</a>
              <a href="#" class="edit-link">Edit</a>
              <form action="developers/<%= developer.id %>/delete" method="POST">
                <button type="submit" class="delete-link">Delete</button>
              </form>
            </td>
          </tr>
          <% }); %>
        </tbody>
      </table>
    </div>
    <footer class="footer">
      <p>&copy; 2025 Game Management Dashboard. All rights reserved.</p>
    </footer>

    <script>
      function filterDevelopers() {
        const searchInput = document.getElementById("search-box").value.toLowerCase(); 
        const rows = document.querySelectorAll("#developer-list tr"); 

        rows.forEach((row) => {
          const developerName = row.querySelector(".developer-name").textContent.toLowerCase();
          const developerBio = row.querySelector(".developer-bio").textContent.toLowerCase();
          const developerGames = row.querySelector(".developer-games").textContent.toLowerCase();

          if (
            developerName.includes(searchInput) ||
            developerBio.includes(searchInput) ||
            developerGames.includes(searchInput)
          ) {
            row.style.display = "";
          } else {
            row.style.display = "none";
          }
        });
      }
    </script>
  </body>
</html>
