<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Games</title>
    <link rel="stylesheet" href="/styles.css" />
  </head>
  <body>
    <nav class="navbar">
      <div class="container">
        <a class="navbar-brand" href="/">Game Management</a>
        <ul class="navbar-links">
          <li><a href="/">Dashboard</a></li>
          <li><a href="/developers">Developers</a></li>
          <li><a href="/games">Games</a></li>
          <li><a href="/genres">Genres</a></li>
        </ul>
      </div>
    </nav>

    <div class="container content">
      <div class="header">
        <h1 class="title">Games</h1>
        <a href="/games/create">
          <button class="add-button">Add New Game</button>
        </a>
      </div>

      <input
        type="text"
        class="search-box"
        id="search-box"
        placeholder="Search games..."
        oninput="filterGames()"
      />

      <table class="developers-table">
        <thead>
          <tr>
            <th>NAME</th>
            <th>DEVELOPER</th>
            <th>GENRE</th>
            <th>ACTIONS</th>
          </tr>
        </thead>
        <tbody id="game-list">
          <% games.forEach(game => { %>
          <tr>
            <td class="game-name"><%= game.name %></td>
            <td class="game-developer"><%= game.developer %></td>
            <td class="game-genre"><%= game.genre %></td>
            <td class="action-links">
              <a href="/games/<%= game.id %>" class="view-link">View</a>
              <form action="games/<%=game.id  %>/delete" method="POST">
                <button type="submit" class="delete-link">Delete</button>
              </form>
            </td>
          </tr>
          <% }); %>
        </tbody>
      </table>
    </div>

    <footer class="footer">
      <p>&copy; 2025 Game Management Dashboard. All rights reserved.</p>
    </footer>

    <script>
      function filterGames() {
        const searchInput = document.getElementById("search-box").value.toLowerCase(); 
        const rows = document.querySelectorAll("#game-list tr"); 

        rows.forEach((row) => {

          const gameName = row.querySelector(".game-name").textContent.toLowerCase();
          const gameDeveloper = row.querySelector(".game-developer").textContent.toLowerCase();
          const gameGenre = row.querySelector(".game-genre").textContent.toLowerCase();

          
          if (
            gameName.includes(searchInput) ||
            gameDeveloper.includes(searchInput) ||
            gameGenre.includes(searchInput)
          ) {
            row.style.display = ""; 
          } else {
            row.style.display = "none"; 
          }
        });
      }
    </script>
  </body>
</html>
