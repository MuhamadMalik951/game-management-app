<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/styles.css">
    <title>Add New Game - Game Management</title>
</head>
<body>
    <nav class="navbar">
        <div class="container">
            <a class="navbar-brand" href="/">Game Management</a>
            <ul class="navbar-links">
                <li><a href="/">Dashboard</a></li>
                <li><a href="/developers">Developers</a></li>
                <li><a href="/games">Games</a></li>
                <li><a href="/genres">Genres</a></li>
            </ul>
        </div>
    </nav>

    <div class="container">
      <header class="dashboard-header">
      </header>
      <form action="/games/create" method="POST" class="form">
        <h1>Add New Game</h1>
            <div class="form-section">
                <h2>Game Details</h2>
                <div class="form-group">
                    <label for="title">Title *</label>
                    <input type="text" id="title" name="name" placeholder="Enter game title" required>
                </div>
            </div>

            <div class="form-section">
                <h2>Genre</h2>
                <div class="form-group">
                    <select id="genre" name="genre" required>
                        <option value="" disabled selected>Select a genre</option>
                        <% genres.forEach(function(genre) { %>
                            <option value="<%= genre.id %>"><%= genre.name %></option>
                        <% }); %>
                    </select>
                    <a href="/genres/create" class="add-link">+ Add New Genre</a>
                </div>
            </div>

            <div class="form-section">
                <h2>Developers</h2>
                <div class="form-group">
                    <div class="checkbox-group">
                        <% developers.forEach(function(developer) { %>
                            <label>
                                <input type="checkbox" name="developers" value="<%= developer.id %>">
                                <%= developer.name %>
                            </label>
                        <% }); %>
                    </div>
                    <a href="/developers/create" class="add-link">+ Add New Developer</a>
                </div>
            </div>

            <div class="form-actions">
                <button type="submit" class="btn-primary">Create Game</button>
                <a href="/" class="btn-secondary">Cancel</a>
            </div>
        </form>
    </div>

    <footer class="footer">
        <p>&copy; 2025 Game Management Dashboard. All rights reserved.</p>
    </footer>
</body>
</html>